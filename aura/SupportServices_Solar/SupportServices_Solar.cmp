<aura:component implements="lightning:isUrlAddressable,flexipage:availableForRecordHome,force:hasRecordId,force:lightningQuickAction">

    <aura:attribute name="showSpinner" type="Boolean" default="false"/>

    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>

    <span class="{!v.showSpinner ? 'slds-show' : 'slds-hide'}">
        <lightning:spinner/>
    </span>

</aura:component>